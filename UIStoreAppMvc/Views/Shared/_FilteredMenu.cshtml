<form method="get" class="mb-4">
    <div class="row g-2 align-items-end">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />
        <div class="col-md-4">
            <label class="form-label">Ara</label>
            <input type="text" name="SearchTerm" class="form-control" placeholder="Ürün ara" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Min Fiyat</label>
            <input type="number" name="MinPrice" class="form-control" placeholder="0" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Max Fiyat</label>
            <input type="number" name="MaxPrice" class="form-control" placeholder="100" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Sırala</label>
            <select name="sortOrder" class="form-select">
                <option value="">Varsayılan</option>
                <option value="price_asc">Fiyat (Artan)</option>
                <option value="price_desc">Fiyat (Azalan)</option>
                <option value="name_asc">Isim (Artan)</option>
                <option value="name_desc">Isim (Azalan)</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-warning w-100">Filtrele</button>
        </div>
    </div>
</form>