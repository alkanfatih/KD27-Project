@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 420px;">
        <h3 class="text-center mb-4 text-warning fw-bold">Giriş Yap</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-Posta</label>
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-envelope-fill text-muted"></i>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-lock-fill text-muted"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                </div>
                <a href="/Account/ForgotPassword" class="small text-decoration-none text-primary">Şifremi Unuttum?</a>
            </div>

            <button type="submit" class="btn w-100 text-white mb-3" style="background-color: #f97316;">
                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
            </button>
        </form>

        <div class="text-center text-muted my-2">veya</div>

        <div class="d-grid gap-2">
            <a href="/external-login/google" class="btn btn-outline-danger">
                <i class="bi bi-google me-2"></i> Google ile Giriş Yap
            </a>
            <a href="/external-login/apple" class="btn btn-outline-dark">
                <i class="bi bi-apple me-2"></i> Apple ile Giriş Yap
            </a>
            <a href="/external-login/facebook" class="btn btn-outline-primary">
                <i class="bi bi-facebook me-2"></i> Facebook ile Giriş Yap
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
