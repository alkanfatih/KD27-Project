<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #1a1a1a;
            color: #f1f1f1;
        }

        .navbar {
            background-color: #212529;
        }

        .sidebar {
            width: 250px;
            background-color: #2c2f33;
            position: fixed;
            top: 56px;
            bottom: 0;
            left: 0;
            overflow-y: auto;
            padding-top: 1rem;
            z-index: 1030;
        }

            .sidebar a {
                display: block;
                color: #ccc;
                padding: 10px 20px;
                font-weight: 500;
                text-decoration: none;
                transition: background 0.2s ease;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #3d4147;
                    color: #fff;
                }

            .sidebar .nav-link.collapsed::after {
                content: "\f078";
                font-family: "Bootstrap-icons";
                float: right;
            }

        .content {
            margin-left: 250px;
            padding: 70px 20px 30px;
            min-height: 100vh;
            background-color: #1a1a1a;
        }

        .collapse .nav-link {
            padding-left: 2.5rem;
        }

        .sidebar .nav-link.text-warning {
            font-weight: 600;
        }

        .navbar-brand {
            font-weight: bold;
            color: #ffc107 !important;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-speedometer2 me-1"></i> Admin Paneli
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/Admin/Category/Index"><i class="bi bi-tags me-2"></i>Kategoriler</a>
        <a href="/Admin/Product/Index"><i class="bi bi-box-seam me-2"></i>Ürünler</a>
        <a href="/Admin/Order/Index"><i class="bi bi-receipt me-2"></i>Siparişler</a>
        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#usersMenu" role="button">
            <i class="bi bi-people me-2"></i>Kullanıcılar
        </a>
        <div class="collapse" id="usersMenu">
            <a class="nav-link" href="/Admin/User/Index">Tüm Kullanıcılar</a>
            <a class="nav-link text-warning" href="/Admin/Agency/AgencyApplications">Ajans Başvuruları</a>
        </div>
        <a href="/Admin/AdminCart/Index"><i class="bi bi-cart-check me-2"></i>Sepetler</a>
    </div>

    <!-- İçerik -->
    <div class="content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
