@model CreateCategoryDto

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-plus-circle me-2"></i> Yeni Kategori Ekle
    </h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-x-circle-fill me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Kalemlikler" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a class="btn btn-outline-secondary" href="/Admin/Category/Index">
                        <i class="bi bi-arrow-left me-1"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save2-fill me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
