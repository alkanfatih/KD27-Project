@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Silinen Kategoriler (Çöp Kutusu)";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash3-fill me-2"></i> Çöp Kutusu - Silinen Kategoriler
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-x-circle-fill me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="mb-4">
        <a class="btn btn-outline-primary" href="/Admin/Category/Index">
            <i class="bi bi-arrow-left me-1"></i> Kategori Listesine Dön
        </a>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle bg-white">
            <thead class="table-light">
                <tr>
                    <th style="width: 60px;">#</th>
                    <th>Kategori Adı</th>
                    <th style="width: 200px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="fw-bold">@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <div class="d-flex gap-2">
                                <form asp-action="Restore" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Bu kategoriyi geri yüklemek istiyor musunuz?')">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-arrow-counterclockwise me-1"></i> Geri Yükle
                                    </button>
                                </form>

                                <form asp-action="HardDelete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Bu kategoriyi KALICI olarak silmek istiyor musunuz?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-x-circle me-1"></i> Kalıcı Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
